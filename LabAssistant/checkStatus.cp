#include "lab assistant.h"#include "database.h"#include "user.h"#include "checkStatus.h"#include "error.h"#include "dialog.h"void HandleCheckStatus(void){	dialogRecordHdl		dialogRecord;		dialogRecord = CreateDialogRec(CheckStatusCallBack, kEventCheckUserStatus, nil, nil, nil);		UserEnterBoxSetup(dialogRecord);}void CheckStatusCallBack(dialogRecordHdl dialogRecord){	computerRecPtr	theComputer;	short 			itemHit;		HLock((Handle) dialogRecord);	itemHit = (*dialogRecord)->itemHit;		theComputer = (computerRecPtr) NewPtr(sizeof(computerRecord));	theComputer->status = kDefaultStatus;		if(itemHit == cancel)	{		HUnlock((Handle) dialogRecord);		DisposePtr((Ptr) theComputer);		DisposeHandle((Handle) dialogRecord);		return;	}		if(!Search(&(*dialogRecord)->theRecord, &theComputer->userInfo))	{		HUnlock((Handle) dialogRecord);		NewAlert("\pThe number you typed was not found.", false, ok, 2);		// Alert that is wrong number entered and to reenter number		DisposePtr((Ptr) theComputer);		DisposeHandle((Handle) dialogRecord);		HandleCheckStatus();	}	else	{			(*dialogRecord)->misc = (long) theComputer;		(*dialogRecord)->theEvent = kEventCheckUserStatus;		(*dialogRecord)->callBack = CheckUserStatus;				HUnlock((Handle) dialogRecord);				UserInfoBoxSetup(dialogRecord);	}}void CheckUserStatus(dialogRecordHdl dialogRecord){	HLock((Handle) dialogRecord);	DisposePtr((Ptr) (*dialogRecord)->misc);	HUnlock((Handle) dialogRecord);	DisposeHandle((Handle) dialogRecord);}void CheckMachineStatus(dialogRecordHdl dialogRecord){	DisposeHandle((Handle) dialogRecord);}